{
  "scripts": {
    "postinstall": "run-p install:*",
    "install:husky": "husky",
    "install:companion": "cd ./companion && npm install",
    "install:generator": "cd ./firmware/register-generator && npm install",
    "fmt": "run-p fmt:*",
    "lint": "run-p lint:*",
    "fmt:companion": "cd ./companion && npm run fmt",
    "lint:companion": "cd ./companion && npm run lint",
    "fmt:controller": "cd ./firmware/controller && clang-format -i *.cpp *.hpp src/*.cpp inc/*.hpp",
    "lint:controller": "cd ./firmware/controller && clang-format --dry-run --Werror *.cpp *.hpp src/*.cpp inc/*.hpp",
    "fmt:driver": "cd ./firmware/driver && clang-format -i *.cpp *.hpp src/*.cpp inc/*.hpp",
    "lint:driver": "cd ./firmware/driver && clang-format --dry-run --Werror *.cpp *.hpp src/*.cpp inc/*.hpp",
    "prepare": "husky"
  },
  "devDependencies": {
    "husky": "^9.1.7",
    "npm-run-all": "^4.1.5"
  }
}
